{
  "name": "zellij-mcp",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "setup": "bun run scripts/download-zellij.ts",
    "dev": "ZELLIJ_MCP_BIN=./bin/zellij bun run --watch index.ts",
    "dev:zellij": "./bin/zellij delete-session zellij-mcp 2>/dev/null; ./bin/zellij --config-dir ./zellij -s zellij-mcp",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "bun test",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@types/bun": "1.3.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "zod": "4.3.6"
  }
}
