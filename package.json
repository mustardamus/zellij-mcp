{
  "name": "zellij-mcp",
  "version": "0.1.0",
  "description": "MCP server that exposes Zellij terminal multiplexer operations as tools for AI coding agents",
  "license": "MIT",
  "author": "Sebastian Senf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mustardamus/zellij-mcp.git"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "zellij",
    "terminal",
    "multiplexer",
    "ai",
    "coding-agent",
    "llm",
    "agent"
  ],
  "type": "module",
  "scripts": {
    "setup": "bun run scripts/download-zellij.ts",
    "dev": "ZELLIJ_MCP_BIN=./bin/zellij bun run --watch index.ts",
    "dev:zellij": "./bin/zellij delete-session zellij-mcp 2>/dev/null; ./bin/zellij --config-dir ./zellij -s zellij-mcp",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "bun test",
    "check": "biome check --write .",
    "build": "bun build ./index.ts --outdir dist --target node --minify && printf '#!/usr/bin/env node\n' | cat - dist/index.js > dist/tmp.js && mv dist/tmp.js dist/index.js && chmod +x dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "bin": {
    "zellij-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@types/bun": "1.3.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "zod": "4.3.6"
  }
}
